    <corners
        android:bottomLeftRadius="100dp"
        android:bottomRightRadius="100dp"
        android:topLeftRadius="100dp"
        android:topRightRadius="100dp"></corners>

    <gradient
        android:angle="90"
        android:startColor="#FFECB3"
        android:endColor="#FFCCBC"
        android:type="linear" />
